<h1>Which Ben?</h1>

<div class='filtered-bens-list'>
  {{#if currentQuestion}}
    {{component currentQuestion setFilter='setFilter' departments=model.departments}}
  {{/if}}

  {{#if filteredBens}}
    {{#each ben in filteredBens}}
      {{ben-card ben=ben}}
    {{/each}}
  {{else}}
    {{#each ben in model.bens}}
      {{ben-card ben=ben}}
    {{/each}}
  {{/if}}
</div>
